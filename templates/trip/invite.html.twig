{# templates/trip/invite.html.twig #}

<h1>Inviter un utilisateur au voyage "{{ trip.name }}"</h1>

<h2>Inviter un utilisateur</h2>

<form action="{{ path('trip_invite', { 'id': trip.id }) }}" method="post">
    <label for="email">E-mail de l'utilisateur :</label>
    <input type="email" id="email" name="email" placeholder="Entrez l'e-mail de l'utilisateur" required>
    <button type="submit">Envoyer l'invitation</button>
</form>
