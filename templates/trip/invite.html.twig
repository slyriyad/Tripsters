{# templates/trip/invite.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Inviter un utilisateur{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Inviter un utilisateur au voyage "{{ trip.name }}"</h1>

    <div class="card">
        <div class="card-body">
            <h2 class="card-title">Inviter un utilisateur</h2>

            <form action="{{ path('trip_invite', { 'id': trip.id }) }}" method="post">
                <div class="form-group mb-3">
                    <label for="email" class="form-label">E-mail de l'utilisateur :</label>
                    <input type="email" id="email" name="email" class="form-control" placeholder="Entrez l'e-mail de l'utilisateur" required>
                </div>

                <button type="submit" class="btn btn-primary">Envoyer l'invitation</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
