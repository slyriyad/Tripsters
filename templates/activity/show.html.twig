{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>{{ activity.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Description</th>
                <td>{{ activity.description }}</td>
            </tr>
            <tr>
                <th>Cost</th>
                <td>{{ activity.cost }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_activity_index') }}">back to list</a>

    <a href="{{ path('app_activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}

    <h2>Commentaires</h2>
    {% for comment in activity.comments %}
        <div class="comment">
            <p><strong>{{ comment.author.email }}</strong> - {{ comment.createdAt|date('d/m/Y H:i') }}</p>
            <p>{{ comment.content }}</p>
        </div>
    {% else %}
        <p>Aucun commentaire pour le moment.</p>
    {% endfor %}

    <h3>Ajouter un commentaire</h3>
    {{ form_start(commentForm) }}
        {{ form_widget(commentForm) }}
        <button type="submit" class="btn btn-primary">Envoyer</button>
    {{ form_end(commentForm) }}
{% endblock %}
