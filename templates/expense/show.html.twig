{% extends 'base.html.twig' %}

{% block title %}Détails de la dépense{% endblock %}

{% block body %}
    <h1>Détails de la dépense</h1>

    <div class="expense-details">
        <h2>{{ expense.name }}</h2>
        <p><strong>Montant total :</strong> {{ expense.amount / 100 }}€</p>
        <p><strong>Date :</strong> {{ expense.date|date('d/m/Y') }}</p>
        <p><strong>Description :</strong> {{ expense.description }}</p>
        <p><strong>Catégorie :</strong> {{ expense.categoryExpense ? expense.categoryExpense.name : 'Non catégorisé' }}</p>
        <p><strong>Voyage :</strong> {{ expense.trip.name }}</p>
    </div>

    

    <div class="actions">
        <a href="{{ path('app_expense_edit', {'id': expense.id}) }}" class="btn btn-primary">Modifier</a>
        <a href="{{ path('app_trip_show', {'id': expense.trip.id}) }}" class="btn btn-secondary">Retour au voyage</a>
        
        {{ include('expense/_delete_form.html.twig') }}
    </div>
{% endblock %}