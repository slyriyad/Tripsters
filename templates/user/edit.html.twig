{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Modifier votre profil</h1>

        {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.email, 'Adresse email') }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-3">
            {{ form_label(form.name, 'Nom') }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-3">
            {{ form_label(form.password.first, 'Nouveau mot de passe') }}
            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-3">
            {{ form_label(form.password.second, 'Confirmer le mot de passe') }}
            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group mt-3">
            {{ form_label(form.imageFile, 'Image de profil') }}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
        </div>

        <button type="submit" class="btn btn-success mt-4">Enregistrer</button>
        {{ form_end(form) }}

        <form action="{{ path('app_user_delete', { 'id': user.id }) }}" method="POST"
              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer votre compte ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete-user') }}">
            <button type="submit" class="btn btn-danger mt-3">Supprimer mon compte</button>
        </form>
    </div>
{% endblock %}
